<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MacrosFragment"
    android:id="@+id/fragment_macros"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:id="@+id/curr_date"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/macros_chart"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="15dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_gravity="center"
        android:id="@+id/table_macros"
        android:background="@color/colorGrey">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cho"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pro"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/target"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cho_target"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fat_target"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pro_target"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>


        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cons"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cho_cons"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fat_cons"
                android:background="@color/colorWhite"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pro_cons"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rem"
                android:textStyle="bold"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cho_rem"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fat_rem"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pro_rem"
                android:background="@color/colorWhite"
                android:textSize="18sp"/>

        </TableRow>



    </TableLayout>

</LinearLayout>